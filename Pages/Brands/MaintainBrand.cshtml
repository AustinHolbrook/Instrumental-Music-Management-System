@page
@model _2021IMMS.Pages.Brands.MaintainBrandModel

@{
    ViewData["Title"] = "MaintainBrand";
}

<body>
    <form method="post">
        <div class="container jumbotron">
            <table>
                <tr>
                    <td align="right">
                        <label style="font-weight:bold">Filter: </label>
                        <input asp-for="Filter" type="text" placeholder="Filter by brand name." />
                        <input asp-page-handler="Filter" type="submit" value="Filter" class="btn btn-accessory" />
                        <input asp-page-handler="ClearFilter" type="submit" value="Clear Filter" class="btn btn-clearfilter"/>
                    </td>
                </tr>
            </table>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <p>
                                <a asp-page="/Brands/AddBrand" class="btn btn-accessory">Add</a>
                            </p>
                        </th>
                        <th><label asp-for="@Model.BrandIList[0].Brand1"></label></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BrandIList)
                    {
                        <tr>
                            <td>
                                <a asp-page="/Brands/ModifyBrand" asp-route-intBrandId="@item.BrandId" class="btn btn-accessory">Modify</a>
                                <a asp-page="/Brands/DeleteBrand" asp-route-intBrandId="@item.BrandId" onclick="return confirm('Are you sure you want to delete this item? Click OK to delete it. Click Cancel to keep it.')" class="btn btn-red">Delete</a>
                            </td>
                            <td><label>@item.Brand1</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</body>
