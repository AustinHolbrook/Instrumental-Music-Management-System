@page
@model _2021IMMS.Pages.Pieces.MaintainPieceModel

@{
    ViewData["Title"] = "MaintainPiece";
}

<body>
    <form method="post">
        <div class="container jumbotron">
            <table>
                <tr>
                    <td align="right">
                        <label style="font-weight:bold">Filter: </label>
                        <input asp-for="Filter" type="text" placeholder="Filter by piece title." />
                        <input asp-page-handler="Filter" type="submit" value="Filter" class="btn btn-accessory" />
                        <input asp-page-handler="ClearFilter" type="submit" value="Clear Filter" class="btn btn-clearfilter" />
                    </td>
                </tr>
            </table>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <p>
                                <a asp-page="/Pieces/AddPiece" class="btn btn-accessory">Add</a>
                            </p>
                        </th>
                        <th><label asp-for="@Model.PieceIList[0].Type"></label></th>
                        <th><label asp-for="@Model.PieceIList[0].Title"></label></th>
                        <th><label asp-for="@Model.PieceIList[0].Arranger"></label> / <label asp-for="@Model.PieceIList[0].Composer"></label></th>
                        <th><label asp-for="@Model.PieceIList[0].DateLastPlayed"></label></th>
                        <th><label asp-for="@Model.PieceIList[0].TimesPerformed"></label></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PieceIList)
                    {
                        <tr>
                            <td>
                                <a asp-page="/Pieces/ModifyPiece" asp-route-intPieceId="@item.PieceId" class="btn btn-accessory">Modify</a>
                                <a asp-page="/Pieces/DeletePiece" asp-route-intPieceId="@item.PieceId" onclick="return confirm('Are you sure you want to delete this item? Click OK to delete it. Click Cancel to keep it.')" class="btn btn-red">Delete</a>
                            </td>
                            <td><label>@item.Type</label></td>
                            <td><label>@item.Title</label></td>
                            <td><label>@item.Arranger / @item.Composer</label></td>
                            <td><label>@item.DateLastPlayed.ToShortDateString()</label></td>
                            <td><label>@item.TimesPerformed</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</body>
